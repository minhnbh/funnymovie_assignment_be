{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "src",
  },
  "include": ["src/**/*.ts", ".env"],
  "exclude": ["node_modules"]
}
